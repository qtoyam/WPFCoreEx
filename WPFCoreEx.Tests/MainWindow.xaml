<Window x:Class="WPFCoreEx.Tests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCoreEx.Tests"
		xmlns:exc="clr-namespace:WPFCoreEx.Controls;assembly=WPFCoreEx"
		xmlns:exconv="clr-namespace:WPFCoreEx.Converters;assembly=WPFCoreEx"
        mc:Ignorable="d"
		Background="Black"
		d:DataContext="{d:DesignInstance Type=local:VM, IsDesignTimeCreatable=True}"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<exc:DataGridEx Style="{StaticResource DataGridEx_Transparent}" ItemsSource="{Binding Persons}"
						ForegroundHeader="Cyan" ForegroundCell="Green">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Aboba1" Binding="{Binding Name}" Width="100"/>
				<DataGridTextColumn Header="Roflan2" Binding="{Binding FirstName}" Width="100"/>
			</DataGrid.Columns>
		</exc:DataGridEx>
	</Grid>
</Window>
